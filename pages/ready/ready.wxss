/* pages/ready/ready.wxss */
.head {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* background: chocolate; */
}

.title {
    margin-top: 70rpx;
    margin-bottom: 20rpx;
    font-size: 40px;
    font-weight: 900;
}

.state {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 20rpx;
}

.grade {
    font-size: 16px;
    font-weight: 600;
}

.rules {
    font-size: 14px;
    font-weight: 600;
    margin-top: 20rpx;
    padding: 0 50rpx;
    margin-bottom: 20rpx;
}

.floor {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    bottom: 30rpx;
    text-align: center;
    margin: 0 auto;
    margin-bottom: 50rpx;

}

.ready_go {
    margin-top: 20rpx;
}

.start {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100rpx;
    width: 300rpx;
    border-radius: 50px;
    background: linear-gradient(145deg, #cad0d4, #f0f7fb);
    box-shadow: 5px 5px 5px #bec4c8,
        -5px -5px 5px #ffffff;
}

.button_hover {

    border-radius: 50px;
    background: linear-gradient(145deg, #cad0d4, #f0f7fb);
    box-shadow: 5px 5px 5px #d5dbdf, 
             -5px -5px 5px #ebf3f7;
    
}